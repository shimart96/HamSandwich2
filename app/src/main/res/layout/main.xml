<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#ffffff"
	android:orientation="vertical">
	<include layout="@layout/appbarlayout" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#00cccc"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
		android:padding="0dp">
		<TextView
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#00cccc"
				android:text="Log Contacts"
				android:textColor="#ffffff"
				android:textSize="20sp" />

	</LinearLayout>

	<TextView
		android:id="@+id/inst1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff"
		android:gravity="center_horizontal"
		android:text="Hold Record and Edit Input"
		android:textColor="#00cccc"
		android:textSize="12sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal">

		<Button
			android:id="@+id/recordBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ic_baseline_record_voice_over_24"
			 />

		<EditText
			android:id="@+id/call"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Call" />

		<EditText
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Name" />

		<EditText
			android:id="@+id/freq"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Freq" />

		<Button
			android:id="@+id/submitBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ic_baseline_save_24"
			 />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="#00cccc"
		android:gravity="center_horizontal"
		android:padding="0dp"
		android:orientation="vertical">


			<TextView
				android:id="@+id/list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#00cccc"
				android:gravity="center_horizontal"
				android:text="Contact List"
				android:textColor="#ffffff"
				android:textSize="20sp" />
		<ImageView android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/bolt"
			android:src="@drawable/bolt"
			android:visibility="gone"
			android:padding="2dp"
			android:layout_gravity="center_horizontal"/>

	</LinearLayout>
		<TextView
			android:id="@+id/inst2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff"
			android:gravity="center_horizontal"
			android:text="Tap a record to edit or delete"
			android:textColor="#00cccc"
			android:textSize="12sp" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="#00cccc"
		android:gravity="center_horizontal"
		android:padding="5dp"
		android:orientation="vertical">
		<ListView
			android:id="@+id/list_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp"
			android:background="#ffffff"
			android:dividerHeight="1dp"
			android:padding="10dp"
			android:paddingLeft="10dp">

		</ListView>

		<TextView
			android:id="@+id/empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="No Contacts to List" />

	</LinearLayout>
</LinearLayout>
